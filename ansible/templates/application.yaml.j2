spring:
  datasource:
    url: jdbc:mysql://{{ rds_endpoint }}:3306/{{ database_name }}
    username: {{ db_username }}
    password: {{ db_password }}
    driver-class-name: com.mysql.cj.jdbc.Driver
  
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true

server:
  port: 8080

management:
  endpoints:
    web:
      exposure:
        include: health
