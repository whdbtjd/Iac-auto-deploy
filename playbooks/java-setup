---
- name: Install Java in EC2
  hosts: webservers
  become: yes                         # sudo 권한으로 실행
  
  tasks:
    - name: Install JDK17
      yum:                            # yum 모듈 사용
        name: java-17-openjdk         # 설치할 패키지
        state: present                # 없으면 깔고 있으면 냅둠
    
    - name: Verify Java installation  # 디버깅용
      command: java -version          # command모듈 사용하여 명령어 실행
      register: java_version          # 결과를 java_version 변수에 저장
   
    - name: Show Java version
      debug:                          # dubug모듈 사용하여 결과 출력
        var: java_version.stdout      # stdout사용하여 변수값 출력
